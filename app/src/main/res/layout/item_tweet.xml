<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvBody"
        android:text="TextView"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:layout_below="@+id/tvUserName"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:textColor="@color/black"
        android:text="TextView"
        android:paddingBottom="24dp"/>

    <TextView
        android:id="@+id/tvRelativeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tvUserName"
        android:text="TextView"
        android:layout_marginLeft="4dp"/>

    <ImageView
        android:id="@+id/ivReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_reply"
        tools:ignore="VectorDrawableCompat"
        android:tint="@color/medium_gray"
        android:layout_alignStart="@id/etTweetBody"/>

    <ImageView
        android:id="@+id/ivRetweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRelativeTime"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/ivReply"
        android:paddingLeft="12dp"
        app:srcCompat="@drawable/ic_vector_retweet"
        tools:ignore="VectorDrawableCompat"
        android:tint="@color/medium_gray"/>

    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRelativeTime"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/ivRetweet"
        app:srcCompat="@drawable/ic_favorite"
        tools:ignore="VectorDrawableCompat"
        android:tint="@color/medium_gray" />

</RelativeLayout>